  <form method="get" action="/quizes">
      Introduzca texto de búsqueda:
      <input type="text" name="search" value="" />
      <input type="submit" value="Buscar" />
    </form>
  <form method="get" action="/quizes">
      Busqueda por tema:
      <select name="search_tema">
        <option value="otro" selected>Otro</option>
        <option value="humanidades">Humanidades</option>
        <option value="ocio">Ocio</option>
        <option value="ciencia">Ciencia</option>
        <option value="tecnologia">Tecnología</option>
      </select>
      <input type="submit" value="Buscar" />
    </form>


<table>
  <% var i; for (i=0; i < quizes.length; i++) { %>
    <tr>
      <td>
        <a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
      </td>
      <td>
        Tema: <%= quizes[i].tema %>
      </td>
      <%if(session.user){%>
        <td>
          <a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a>
        </td>
        <td>
          <form method="post" 
            action="quizes/<%= quizes[i].id %>?_method=delete">
            <button type="submit" 
              onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
              borrar
            </button>
          </form>
        </td>
      <%}%>
    </tr>
  <% } %>
</table>
<p/>
<%if(session.user){%>
  <a href="/quizes/new"><button type="button">Crear pregunta</button></a>
<%}%>

